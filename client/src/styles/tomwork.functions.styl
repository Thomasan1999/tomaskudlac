background()
    $a = '' + arguments
    $val = unquote(replace('\)$', '', replace('linear-gradient\(', '', $a)))
    if (match('linear-gradient\(', $a))
        background: linear-gradient + $val
        background: -moz-linear-gradient + $val
        background: -webkit-linear-gradient + $val
    else
        background: arguments

border-function($param, arguments)
    if length(arguments) < 3
        $color = ''
        if length(arguments[1]) == 2
            for $i in (0..5)
                $color += substr(arguments[1], 1, 1)
        else if length(arguments[1]) == 3
            for $i in (0..2)
                $color += substr(arguments[1], 1, 2)
        else
            $color = arguments[1]
        {$param}: arguments[0] solid $color
    else
        {$param}: arguments

border()
    border-function(border, arguments)

border-bottom()
    border-function(border-bottom, arguments)

border-horizontal()
    border-left()
    border-right()

border-left()
    border-function(border-left, arguments)

border-right()
    border-function(border-right, arguments)

border-top()
    border-function(border-top, arguments)

border-vertical()
    border-bottom(arguments)
    border-top(arguments)

display()
    if !arguments
        display: none
    else
        display: arguments

fill()
    if !arguments
        fill: none
    else
        fill: arguments

font-color()
    color: arguments

font-type()
    font-family: arguments

font-width()
    font-weight: arguments

font-weight($value)
    if $value == thin or $value == hairline
        font-weight: 100
    else if $value == extra-light
        font-weight: 200
    else if $value == light
        font-weight: 300
    else if $value == normal
        font-weight: 400
    else if $value == medium
        font-weight: 500
    else if $value == semi-bold or $value == demi-bold
        font-weight: 600
    else if $value == bold
        font-weight: 700
    else if $value == extra-bold or $value == ultra-bold
        font-weight: 800
    else if $value == black or $value == heavy
        font-weight: 900
    else
        font-weight: $value

margin-horizontal()
    if length(arguments) > 1
        margin-left: arguments[0]
        margin-right: arguments[1]
    else
        margin-left: arguments
        margin-right: arguments

margin-vertical()
    if length(arguments) > 1
        margin-bottom: arguments[1]
        margin-top: arguments[0]
    else
        margin-bottom: arguments
        margin-top: arguments

max-width()
    if !arguments
        max-width: none
    else
        max-width: arguments

padding-horizontal()
    if length(arguments) > 1
        padding-left: arguments[0]
        padding-right: arguments[1]
    else
        padding-left: arguments
        padding-right: arguments

padding-vertical()
    if length(arguments) > 1
        padding-bottom: arguments[1]
        padding-top: arguments[0]
    else
        padding-bottom: arguments
        padding-top: arguments

placeholder()
    &::-webkit-input-placeholder
    {
        {block}
    }

    &:-moz-placeholder
    {
        {block}
    }

    &::-moz-placeholder
    {
        {block}
    }

    &:-ms-input-placeholder
    {
        {block}
    }

resize()
    if !arguments
        resize: none
    else
        resize: arguments

selection()
    ::selection
    {
        {block}
    }

    ::-moz-selection
    {
        {block}
    }

transition()
    if length(arguments) > 1
        transition: arguments
    else
        transition: all arguments

user-select()
    if (!arguments)
        user-select: none
    else
        user-select: arguments

vertical-align()
    if arguments == center
        vertical-align: middle
    else
        vertical-align: arguments

visibility()
    if arguments
        visibility: visible
    else if !arguments
        visibility: hidden
    else
        visibility: arguments

z()
    z-index: arguments
